<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <com.example.meituancooridinator.business.MerchantContentLayout
        android:id="@+id/layContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.meituancooridinator.business.MerchantPageLayout
        android:id="@+id/layPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/merchant_offset"
        app:layout_behavior="@string/view_behavior_merchant_page"/>

    <com.example.meituancooridinator.business.MerchantTitleLayout
        android:id="@+id/layTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.meituancooridinator.business.MerchantSettleLayout
        android:id="@+id/laySettle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>